@model CMS.Mcp.Client.Contracts.Models.ErrorViewModel

@{
    ViewData["Title"] = $"Error {Model.StatusCode}";
}

<div class="error-page-container">
    <div class="error-content">
        <div class="error-icon">
            <i class="fas fa-exclamation-circle"></i>
        </div>
        <h1 class="error-code">@Model.StatusCode</h1>
        <h2 class="error-title">An error occurred</h2>
        <p class="error-message">@Model.Message</p>
        
        @if (!string.IsNullOrEmpty(Model.RequestId))
        {
            <div class="error-details">
                <div class="request-id">
                    <span>Request ID:</span>
                    <code>@Model.RequestId</code>
                </div>
            </div>
        }
        
        <div class="error-actions">
            <a href="/mcp/chat" class="btn btn-primary">
                <i class="fas fa-comments me-2"></i>Return to Chat
            </a>
            <button onclick="window.history.back();" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Go Back
            </button>
        </div>
    </div>
</div>

<style>
    .error-page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 100px);
        padding: 2rem;
    }
    
    .error-content {
        text-align: center;
        max-width: 600px;
        padding: 3rem;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    
    .error-icon {
        font-size: 5rem;
        color: var(--primary-blue, #0078d4);
        margin-bottom: 1rem;
        animation: pulse 2s infinite ease-in-out;
    }
    
    @@keyframes pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.1); }
    }
    
    .error-code {
        font-size: 4rem;
        font-weight: 700;
        color: var(--dark-blue, #0d47a1);
        margin-bottom: 0.5rem;
        line-height: 1;
    }
    
    .error-title {
        font-size: 1.75rem;
        color: #333;
        margin-bottom: 1.5rem;
    }
    
    .error-message {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 2rem;
    }
    
    .error-details {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 6px;
        margin-bottom: 2rem;
    }
    
    .request-id {
        font-size: 0.9rem;
        color: #666;
    }
    
    .request-id code {
        background: #eee;
        padding: 0.2rem 0.5rem;
        border-radius: 3px;
        font-family: monospace;
    }
    
    .error-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }
    
    .btn {
        padding: 0.75rem 1.5rem;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .error-content {
            padding: 2rem;
        }
        
        .error-code {
            font-size: 3rem;
        }
        
        .error-title {
            font-size: 1.5rem;
        }
        
        .error-actions {
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .btn {
            width: 100%;
        }
    }
</style>
